<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package -->
    <PackageId>XisfLib.Core</PackageId>
    <Version>1.0.0</Version>
    <Authors>Jonathan MacCollum</Authors>
    <Description>A .NET library for reading and writing XISF (Extensible Image Serialization Format) files</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/JonathanMaccollum/XisfLib.Core</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JonathanMaccollum/XisfLib.Core</RepositoryUrl>
    <PackageTags>xisf;astronomy;astrophotography;pixinsight;image</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="K4os.Compression.LZ4" Version="1.3.8" />
  </ItemGroup>

</Project>
